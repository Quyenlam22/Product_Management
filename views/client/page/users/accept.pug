extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3 
        .row 
            .col-12 
                +box-head(pageTitle)

        include ../../partials/list-btn-users.pug

        .row 
            each user in users
                .col-6 
                    .box-user
                        .inner-avatar 
                            img(
                                src=(user.avatar ? user.avatar : "/images/avatar.png")
                                alt=user.fullName
                            )
                        .inner-info     
                            .inner-name #{user.fullName}
                            .inner-buttons 
                                button(
                                    class="btn btn-sm btn-primary mx-1"
                                    btn-accept-friend=user.id
                                ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary mx-1"
                                    btn-refuse-friend=user.id
                                ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary mx-1"
                                    btn-deleted-friend
                                    disable
                                ) Đã Xóa
                                button(
                                    class="btn btn-sm btn-primary mx-1"
                                    btn-accepted-friend
                                    disable
                                ) Đã chấp nhận
                                

block script
    script(src="/js/users.js") 