extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/show-alert.pug
block main
    +alert-success(5000)
    +alert-error(5000)
    .container.my-3 
        .row 
            .col-12 
                if(product.title)
                    h1(class="mb-4") Chi tiết sản phẩm - #{product.title}

                if(product.description)
                    div(class="mb-4") Mô tả: <b>!{product.description}</b>

                if(product.price)
                    div(class="mb-4") Giá: <b>#{product.price}</b>

                if(product.discountPercentage)
                    div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

                if(product.stock)
                    div(class="mb-4") Còn lại: <b>#{product.stock}</b>
                if(product.sold)
                    div(class="mb-4") Đã bán: <b>#{product.sold}</b>
                if(product.thumbnail)
                    div(class="mb-4")
                        img(
                            src=product.thumbnail
                            style="width: 100px"
                        )
