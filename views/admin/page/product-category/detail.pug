extends ../../layouts/default.pug

block main 
    if(record.title)
        h1(class="mb-4") Chi tiết danh mục - #{record.title}

    if(record.parent_id)
        div(class="mb-4") Danh mục cha - <b>#{parent.title}</b>

    if(record.description)
        div(class="mb-4") Mô tả: <b>!{record.description}</b>

    if(record.thumbnail)
        div(class="mb-4")
            img(
                src=record.thumbnail
                style="width: 100px"
            )
    
    if(record.status)
        div(class="mb-4")
            span Trạng thái: 
            if(record.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động
    
    if(record.position)
        div(class="mb-4") Vị trí: <b>#{record.position}</b>

    a(
        class="btn btn-warning"
        href=`${prefixAdmin}/product-category/edit/${record.id}`
    ) Chỉnh sửa

