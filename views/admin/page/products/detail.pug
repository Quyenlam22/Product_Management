extends ../../layouts/default.pug
include ../../mixins/moment.pug

block main 
    if(product.title)
        h1(class="mb-4") Chi tiết sản phẩm - #{product.title}

    if(product.product_category_id)
        div(class="mb-4") Danh mục: <b>!{record.title}</b>

    if(product.description)
        div(class="mb-4") Mô tả: <b>!{product.description}</b>

    if(product.price)
        div(class="mb-4") Giá: <b>#{product.price}</b>

    if(product.discountPercentage)
        div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

    if(product.stock)
        div(class="mb-4") Còn lại: <b>#{product.stock}</b>

    if(product.thumbnail)
        div(class="mb-4")
            img(
                src=product.thumbnail
                style="width: 100px"
            )
    
    if(product.status)
        div(class="mb-4")
            span Trạng thái: 
            if(product.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động
    
    if(product.position)
        div(class="mb-4") Vị trí: <b>#{product.position}</b>

    if(updatedBy)
        div(class="mb-4") Người cập nhật: <b>#{updatedBy.accountFullName}</b>
        div(class="mb-4") Ngày cập nhật: <b>
            +formatDateTime(updatedBy.updatedAt)
            </b>
    a(
        class="btn btn-warning"
        href=`${prefixAdmin}/products/edit/${product.id}`
    ) Chỉnh sửa

    script(src="/admin/js/product.js") 