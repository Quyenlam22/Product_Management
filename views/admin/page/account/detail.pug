extends ../../layouts/default.pug

block main 

    if(account.fullName)
        h1(class="mb-4") Chi tiết tài khoản - #{account.fullName}

    if(account.avatar)
        div(class="mb-4")
            img(
                src=account.avatar
                style="width: 100px"
            )

    if(account.email)
        div(class="mb-4") Email: <b>!{account.email}</b>

    if(account.phone)
        div(class="mb-4") Phone: <b>#{account.phone}</b>
    
    if(role)
        div(class="mb-4") Nhóm quyền: <b>#{role.title}</b>
    
    if(account.status)
        div(class="mb-4")
            span Trạng thái: 
            if(account.status === "active")
                span(class="badge badge-success") Hoạt động
            else
                span(class="badge badge-danger") Dừng hoạt động
    a(
        class="btn btn-warning"
        href=`${prefixAdmin}/accounts/edit/${account.id}`
    ) Chỉnh sửa

    script(src="/admin/js/account.js") 